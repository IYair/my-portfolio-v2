generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

// Blog posts model
model Post {
  id          Int      @id @default(autoincrement())
  title       String
  slug        String   @unique
  excerpt     String?  @db.Text
  content     String   @db.LongText
  published   Boolean  @default(false)
  featured    Boolean  @default(false)
  coverImage  String?
  tags        Tag[]    @relation("PostTags")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("posts")
}

// Tags model
model Tag {
  id    Int    @id @default(autoincrement())
  name  String @unique
  posts Post[] @relation("PostTags")

  @@map("tags")
}

// Projects model
model Project {
  id          Int      @id @default(autoincrement())
  title       String
  slug        String   @unique
  description String?  @db.Text
  longDescription String? @db.LongText
  image       String?
  demoUrl     String?
  githubUrl   String?
  technologies String  @db.Text // JSON array as string
  featured    Boolean  @default(false)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("projects")
}

// Contact messages model
model Contact {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  subject   String?
  message   String   @db.Text
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  @@map("contacts")
}

// About page content models
model AboutProfile {
  id          Int    @id @default(autoincrement())
  name        String
  title       String
  subtitle    String
  bio         String @db.Text
  profileImage String? @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("about_profile")
}

model Skill {
  id        Int      @id @default(autoincrement())
  name      String
  icon      String   @db.Text
  category  String?  // Frontend, Backend, Tools, etc.
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("skills")
}

model ContactInfo {
  id        Int      @id @default(autoincrement())
  type      String   // email, phone, location, linkedin, github
  value     String
  icon      String?  @db.Text
  isHeroicon Boolean @default(false)
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("contact_info")
}

model WorkExperience {
  id          Int      @id @default(autoincrement())
  position    String
  company     String
  description String   @db.Text
  startDate   String?  // Format: "2020" or "Jan 2020"
  endDate     String?  // Format: "2022" or "Present"
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("work_experience")
}

model Education {
  id          Int      @id @default(autoincrement())
  institution String
  degree      String
  field       String?
  startDate   String?
  endDate     String?
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("education")
}

model Course {
  id           Int      @id @default(autoincrement())
  title        String
  provider     String   // Platzi, Udemy, etc.
  providerIcon String?  @db.Text
  icon         String?  @db.Text
  category     String?  // Optional grouping
  order        Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("courses")
}
